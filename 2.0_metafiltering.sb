# comm -23 temp1 annotsorting/miRNA_LDSR.sort > temp2
# comm -23 temp2 annotsorting/rRNA_LDSR.sort > temp1
# comm -23 temp1 annotsorting/2_TssAFlnk_LDSR.sort > annotsorting/ConsPeaks_FilterByAll_LDSR.txt

